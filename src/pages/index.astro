---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9fafb;
        color: #1f2937;
        margin: 0;
        padding: 0;
      }
      .hero {
        position: relative;
        width: 100%;
        height: 60vh;
        background: url('/src/media/IMG_5760.JPG') center center / cover no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
      }
      .hero::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background-color: rgba(17, 24, 39, 0.6); /* dark overlay */
        z-index: 1;
      }
      .hero-text {
        position: relative;
        z-index: 2;
        max-width: 720px;
        padding: 0 1rem;
      }
      .hero-text h1 {
        font-size: 2.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        line-height: 1.2;
      }
      .hero-text p {
        font-size: 1.25rem;
        line-height: 1.5;
      }
      main {
        max-width: 900px;
        margin: 3rem auto;
        padding: 0 1.25rem;
      }
      section {
        margin-bottom: 3rem;
      }
      a {
        color: #2563eb;
        text-decoration: none;
        transition: color 0.2s ease-in-out;
      }
      a:hover {
        color: #1d4ed8;
        text-decoration: underline;
      }
      ul.services-list {
        list-style: none;
        padding: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      ul.services-list li {
        background-color: #ffffff;
        border-radius: 0.5rem;
        box-shadow: 0 1px 3px rgb(0 0 0 / 0.1);
        padding: 1.5rem 1.75rem;
        font-weight: 600;
        color: #374151;
        transition: box-shadow 0.3s ease;
      }
      ul.services-list li:hover {
        box-shadow: 0 4px 12px rgb(0 0 0 / 0.15);
      }
      footer p {
        font-size: 0.875rem;
        text-align: center;
        color: #6b7280;
        margin-top: 3rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <section class="hero" role="img" aria-label="Professional legal services building background">
      <div class="hero-text">
        <h1>CCL Advisors â€“ Trusted Legal Solutions</h1>
        <p>
          Providing expert legal services tailored to startups, enterprises, and individuals. We offer reliable counsel with deep industry knowledge and a client-focused approach.
        </p>
      </div>
    </section>
    <main>
      <section>
        <h2>Our Expertise</h2>
        <ul class="services-list">
          <li>Corporate & Business Law</li>
          <li>Intellectual Property Protection</li>
          <li>Contract Drafting & Negotiation</li>
          <li>Regulatory Compliance & GDPR Consulting</li>
          <li>Litigation & Dispute Resolution</li>
          <li>Employment & Labor Law</li>
        </ul>
      </section>
      <section>
        <h2>Why Choose Us</h2>
        <p>
          At CCL Advisors, we combine legal expertise with practical insights to help you navigate complex challenges efficiently. Our personalized service and transparent communication ensure you stay informed every step of the way.
        </p>
        <p>
          <a href="/contact">Contact us today</a> to discuss your legal needs and discover how we can support your success.
        </p>
      </section>
    </main>
    <Footer />
  </body>
</html>
