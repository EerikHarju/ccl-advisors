// Server-rendered redirect - NO dynamic imports needed
export const prerender = false;

const lang = Astro.request.headers.get('accept-language')?.startsWith('fi') ? 'fi' : 'en';

if (Astro.url.pathname === '/') {
  return Astro.redirect(`/${lang}/`);
}
