---
import HeaderLink from './HeaderLink.astro';
import { Astro } from 'astro';

const lang = Astro.url.pathname.startsWith('/fi') ? 'fi' : 'en';
const toggleLang = lang === 'fi' ? 'en' : 'fi';
const togglePath = Astro.url.pathname.replace(`/${lang}`, `/${toggleLang}`);
const prefix = `/${lang}`;

const translations = {
  en: { home: 'Home', about: 'About', services: 'Services', references: 'References', contact: 'Contact', 
        serviceItems: { transactions: 'Transactions', commercial: 'Commercial Contracts', corporate: 'Corporate', legalops: 'Legal Operations' } },
  fi: { home: 'Etusivu', about: 'Yritys', services: 'Palvelut', references: 'Referenssit', contact: 'Yhteystiedot', 
        serviceItems: { transactions: 'Kaupankäynti', commercial: 'Kaupalliset sopimukset', corporate: 'Yhtiöoikeus', legalops: 'Oikeudelliset toiminnot' } }
};

const services = [
  { key: 'serviceItems.transactions', href: '/services/transactions' },
  { key: 'serviceItems.commercial', href: '/services/commercial-contracts' },
  { key: 'serviceItems.corporate', href: '/services/corporate' },
  { key: 'serviceItems.legalops', href: '/services/legal-operations' }
];

const t = (key: string) => {
  let result = translations[lang];
  for (const k of key.split('.')) {
    result = result?.[k];
    if (result === undefined) return key;
  }
  return result;
};
---

<header class="header">
  <nav class="nav" aria-label="Primary navigation">
    <a href={`${prefix}/`} class="logo" aria-label="CCL Advisory Oy Home">
      <img src="/media/HG Logo 1 1600x600 icon.png" alt="CCL Advisory logo" class="logo-img" />
    </a>

    <ul class="nav-list desktop-only">
      <li><HeaderLink href={`${prefix}/`}>{t('home')}</HeaderLink></li>
      <li><HeaderLink href={`${prefix}/about`}>{t('about')}</HeaderLink></li>
      <li class="nav-item dropdown">
        <HeaderLink href={`${prefix}/services`} class="services-link">
          <span class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">{t('services')}</span>
        </HeaderLink>
        <ul class="dropdown-menu">
          {services.map(s => <li><HeaderLink href={`${prefix}${s.href}`}>{t(s.key)}</HeaderLink></li>)}
        </ul>
      </li>
      <li><HeaderLink href={`${prefix}/references`}>{t('references')}</HeaderLink></li>
      <li><HeaderLink href={`${prefix}/contact`}>{t('contact')}</HeaderLink></li>
    </ul>

    <div class="nav-right">
      <button class="lang-toggle desktop-only" type="button" onclick={`window.location.href='${togglePath}'`}
              aria-label={lang === 'en' ? 'Switch to Finnish' : 'Vaihda kieli englanniksi'}>
        {toggleLang.toUpperCase()}
      </button>
      <button class="mobile-menu-btn mobile-only" type="button" aria-label="Toggle menu" aria-expanded="false">
        <span></span><span></span><span></span>
      </button>
    </div>
  </nav>

  <div class="overlay mobile-only" id="overlay"></div>
  <aside class="sidebar mobile-only" id="sidebar">
    <nav class="sidebar-nav">
      <HeaderLink href={`${prefix}/`}>{t('home')}</HeaderLink>
      <HeaderLink href={`${prefix}/about`}>{t('about')}</HeaderLink>
      <HeaderLink href={`${prefix}/services`}>{t('services')}</HeaderLink>
      <div class="sidebar-services-list">
        {services.map(s => <HeaderLink href={`${prefix}${s.href}`}>{t(s.key)}</HeaderLink>)}
      </div>
      <HeaderLink href={`${prefix}/references`}>{t('references')}</HeaderLink>
      <HeaderLink href={`${prefix}/contact`}>{t('contact')}</HeaderLink>
      <button class="lang-toggle-mobile" type="button" onclick={`window.location.href='${togglePath}'`}
              aria-label={lang === 'en' ? 'Switch to Finnish' : 'Vaihda kieli englanniksi'}>
        {toggleLang.toUpperCase()}
      </button>
    </nav>
  </aside>
</header>

<style>
  :root {
    --color-text: #111111;
    --color-hover: #b67b3f;
    --color-bg: #ffffff;
    --spacing: clamp(1rem, 4vw, 2rem);
    --spacing-lg: clamp(2rem, 6vw, 4rem);
    --font-nav: clamp(0.85rem, 2vw, 0.95rem);
  }

  .header {
    background: var(--color-bg);
    border-bottom: 1px solid #e5e5e5;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    position: relative;
    z-index: 10;
  }

  .desktop-only { display: block; }
  .mobile-only { display: none; }

  .nav {
    max-width: clamp(1000px, 90vw, 1400px);
    margin: 0 auto;
    padding: var(--spacing) 0;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    justify-self: start;
  }

  .logo-img {
    height: clamp(32px, 6vw, 40px);
    width: auto;
    display: block;
  }

  .nav-list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-lg);
    margin: 0;
    padding: 0;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-self: end;
  }

  .nav-item { position: relative; }
  .services-link { display: contents; }

  .nav-list a, .dropdown-toggle, .lang-toggle {
    font-size: var(--font-nav); letter-spacing: 0.08em; text-transform: uppercase;
    font-weight: 500; color: var(--color-text); background: none; border: none;
    padding: .25rem 0; cursor: pointer; text-decoration: none; transition: color 160ms ease-out;
    white-space: nowrap;
  }

  .nav-list a:hover, .dropdown-toggle:hover, .lang-toggle:hover { color: var(--color-hover); }

  .dropdown-toggle {
    display: inline-flex;
    align-items: center;
    gap: .25rem;
  }

  .dropdown-toggle::after {
    content: '▾';
    font-size: .7em;
    transition: transform 160ms ease-out;
  }

  .dropdown:hover .dropdown-toggle::after { transform: rotate(180deg); }

  .dropdown-menu {
    position: absolute;
    left: 50%;
    top: 2rem;
    transform: translateX(-50%);
    min-width: 220px;
    background: #ffffff;
    list-style: none;
    margin: 0;
    padding: .4rem 0;
    border-radius: .5rem;
    box-shadow: 0 18px 45px rgba(15, 23, 42, .12);
    opacity: 0;
    visibility: hidden;
    transition: opacity 140ms ease-out, transform 140ms ease-out, visibility 140ms ease-out;
  }

  .dropdown-menu li { padding: .1rem .4rem; }

  .dropdown-menu a {
    display: block;
    width: 100%;
    padding: .35rem .8rem;
    font-size: .9rem;
    text-transform: none;
    letter-spacing: .02em;
  }

  .dropdown-menu a:hover { color: var(--color-hover); }

  .dropdown:hover .dropdown-menu,
  .dropdown:focus-within .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%);
  }

  .mobile-menu-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: .5rem;
  }

  .mobile-menu-btn span {
    display: block;
    width: 25px;
    height: 3px;
    background: var(--color-text);
    margin: 5px 0;
    border-radius: 2px;
    transition: all .3s ease;
  }

  @media (max-width: 1024px) {
    .desktop-only { display: none !important; }
    .mobile-only { display: block; }

    .nav {
      grid-template-columns: auto 1fr auto;
      gap: var(--spacing);
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: var(--color-bg);
      box-shadow: 3px 0 15px rgba(0, 0, 0, .3);
      width: max-content;
      max-width: 80vw;
      overflow-y: auto;
      padding: var(--spacing-lg) var(--spacing);
      box-sizing: border-box;
      transform: translateX(-110%);
      transition: transform .3s cubic-bezier(.25, .46, .45, .94);
      z-index: 1001;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    .sidebar.active { transform: translateX(0); }

    .sidebar-nav a {
      display: block;
      padding: .75rem 0;
      font-size: var(--font-nav);
      font-weight: 600;
      color: var(--color-text);
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: .1em;
      border-bottom: 1px solid #e5e5e5;
    }

    .sidebar-nav a:hover { color: var(--color-hover); }

    .sidebar-services-list {
      margin-left: 1.25rem;
      display: flex;
      flex-direction: column;
      gap: .25rem;
    }

    .sidebar-services-list a {
      font-size: .85rem;
      font-weight: 500;
      text-transform: none;
      letter-spacing: normal;
      border-bottom: none;
      padding-left: 0;
    }

    .lang-toggle-mobile {
      font-size: var(--font-nav);
      letter-spacing: .12em;
      text-transform: uppercase;
      font-weight: 500;
      border: none;
      background: none;
      cursor: pointer;
      color: var(--color-text);
      padding: 0;
      margin-top: auto;
      text-align: left;
      width: fit-content;
    }

    .lang-toggle-mobile:hover { color: var(--color-hover); }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, .4);
      opacity: 0;
      visibility: hidden;
      transition: opacity .3s ease;
      z-index: 1000;
    }

    .overlay.active {
      opacity: 1;
      visibility: visible;
    }
  }

  @media (max-width: 640px) {
    .nav {
      padding: var(--spacing) 0;
      gap: var(--spacing);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const [$btn, $sidebar, $overlay] = ['.mobile-menu-btn', '.sidebar', '.overlay'].map(q => document.querySelector(q));
    
    const closeMenu = () => {
      $sidebar?.classList.remove('active');
      $overlay?.classList.remove('active');
      $btn?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    };
    
    const openMenu = () => {
      $sidebar?.classList.add('active');
      $overlay?.classList.add('active');
      $btn?.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    };

    $btn?.addEventListener('click', () => $sidebar.classList.contains('active') ? closeMenu() : openMenu());
    $overlay?.addEventListener('click', closeMenu);
    $sidebar?.querySelectorAll('a').forEach(a => a.addEventListener('click', closeMenu));
  });
</script>
