---
// src/components/Header.astro
import HeaderLink from './HeaderLink.astro';
import { Astro } from 'astro';

// Inline translations - no extra files needed
const translations = {
  en: {
    home: 'Home',
    about: 'About',
    services: 'Services',
    references: 'References',
    contact: 'Contact',
    serviceItems: {
      transactions: 'Transactions',
      commercial: 'Commercial Contracts',
      corporate: 'Corporate',
      legalops: 'Legal Operations'
    }
  },
  fi: {
    home: 'Etusivu',
    about: 'Yritys',
    services: 'Palvelut',
    references: 'Referenssit',
    contact: 'Yhteystiedot',
    serviceItems: {
      transactions: 'Kaupankäynti',
      commercial: 'Kaupalliset sopimukset',
      corporate: 'Yhtiöoikeus',
      legalops: 'Oikeudelliset toiminnot'
    }
  }
};

// Detect current language
const lang = Astro.url.pathname.startsWith('/fi') ? 'fi' : 'en';
const toggleLang = lang === 'en' ? 'fi' : 'en';
const togglePath = Astro.url.pathname.replace(`/${lang}`, `/${toggleLang}`);

// Services array
const services = [
  { labelKey: 'serviceItems.transactions', href: '/services/transactions' },
  { labelKey: 'serviceItems.commercial', href: '/services/commercial-contracts' },
  { labelKey: 'serviceItems.corporate', href: '/services/corporate' },
  { labelKey: 'serviceItems.legalops', href: '/services/legal-operations' },
];

// Translation helper
function t(key: string): string {
  const keys = key.split('.');
  let result: any = translations[lang];
  for (const k of keys) {
    result = result?.[k];
    if (result === undefined) {
      return key;  // fallback to showing the key text itself
    }
  }
  return result;
}

---

<header class="header">
  <nav class="nav" aria-label="Primary navigation">
    <!-- Left: Logo -->
    <a href={`/${lang}/`} class="logo" aria-label="CCL Advisory Oy Home">
      <img
        src="/media/HG Logo 1 1600x600 icon.png"
        alt="CCL Advisory logo"
        class="logo-img"
      />
    </a>

    <!-- Center: Navigation -->
    <ul class="nav-list">
      <li><HeaderLink href={`/${lang}/`}>{t('home')}</HeaderLink></li>
      <li><HeaderLink href={`/${lang}/about`}>{t('about')}</HeaderLink></li>

      <li class="nav-item dropdown">
        <button class="dropdown-toggle" type="button" aria-haspopup="true" aria-expanded="false">
          {t('services')}
        </button>
        <ul class="dropdown-menu">
          {services.map((service) => (
            <li>
              <HeaderLink href={`/${lang}${service.href}`}>{t(service.labelKey)}</HeaderLink>
            </li>
          ))}
        </ul>
      </li>

      <li><HeaderLink href={`/${lang}/references`}>{t('references')}</HeaderLink></li>
      <li><HeaderLink href={`/${lang}/contact`}>{t('contact')}</HeaderLink></li>
    </ul>

    <!-- Right: Language toggle -->
    <button
      class="lang-toggle"
      type="button"
      onclick={`window.location.href='${togglePath}'`}
      aria-label={lang === 'en' ? 'Switch to Finnish' : 'Vaihda kieli englanniksi'}
    >
      {toggleLang.toUpperCase()}
    </button>
  </nav>
</header>

<style>
  :root {
    --color-text: #111111;
    --color-hover: #b67b3f;
    --color-bg: #ffffff;
  }

  .header {
    background: var(--color-bg);
    border-bottom: 1px solid #e5e5e5;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.25rem 2rem;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Inter', sans-serif;
    gap: 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo-img {
    height: 40px;
    width: auto;
    display: block;
  }

  .nav-list {
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .nav-item {
    position: relative;
  }

  .nav-list a,
  .dropdown-toggle {
    font-size: 0.95rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-weight: 500;
    color: var(--color-text);
    background: none;
    border: none;
    padding: 0.25rem 0;
    cursor: pointer;
    text-decoration: none;
    transition: color 160ms ease-out;
  }

  .nav-list a:hover,
  .dropdown-toggle:hover {
    color: var(--color-hover);
  }

  .dropdown-toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-toggle::after {
    content: '▾';
    font-size: 0.7em;
    transition: transform 160ms ease-out;
  }

  .dropdown:hover .dropdown-toggle::after {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    left: 50%;
    top: 2rem;
    transform: translateX(-50%);
    min-width: 220px;
    background: #ffffff;
    list-style: none;
    margin: 0;
    padding: 0.4rem 0;
    border-radius: 0.5rem;
    box-shadow: 0 18px 45px rgba(15, 23, 42, 0.12);
    opacity: 0;
    visibility: hidden;
    transition: opacity 140ms ease-out, transform 140ms ease-out, visibility 140ms ease-out;
  }

  .dropdown-menu li {
    padding: 0.1rem 0.4rem;
  }

  .dropdown-menu a {
    display: block;
    width: 100%;
    padding: 0.35rem 0.8rem;
    font-size: 0.9rem;
    text-transform: none;
    letter-spacing: 0.02em;
  }

  .dropdown-menu a:hover {
    color: var(--color-hover);
  }

  .dropdown:hover .dropdown-menu,
  .dropdown:focus-within .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%);
  }

  .lang-toggle {
    border: none;
    background: none;
    font-size: 0.9rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 500;
    cursor: pointer;
    color: var(--color-text);
    padding: 0;
    transition: color 160ms ease-out;
  }

  .lang-toggle:hover {
    color: var(--color-hover);
  }

  @media (max-width: 768px) {
    .nav {
      grid-template-columns: 1fr;
      gap: 1rem;
      text-align: center;
    }
    
    .nav-list {
      gap: 1.5rem;
      order: -1;
    }
    
    .logo,
    .lang-toggle {
      justify-self: center;
    }
  }
</style>
